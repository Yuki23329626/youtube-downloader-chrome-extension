{
  "name": "Lite Youtube Downloder - Native App",
  "description": "Base Level Extension",
  "version": "1.333",
  "manifest_version": 3,
  "icons":{
    "128": "youtube-downloader-v2.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "youtube-downloader-v2.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "downloads",
    "webRequest",
    "webNavigation",
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}